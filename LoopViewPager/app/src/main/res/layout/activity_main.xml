<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edwin.loopviewpager.MainActivity">

    <com.edwin.loopviewpager.lib.LoopViewPagerLayout
        android:id="@+id/view_main_loopViewPager1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_main_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="mainInfo"
        android:text="@string/describe"
        android:textColor="#4b4b4b"
        android:textSize="18sp" />

    <com.edwin.loopviewpager.lib.LoopViewPagerLayout
        android:id="@+id/view_main_loopViewPager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
